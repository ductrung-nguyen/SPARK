package learnscala1

object test8 {
  println("Welcome to the Scala worksheet")
  
  var x = new Zero
  var y = new Succ(new Succ(new Succ(x)))
  var z = new Succ(new Succ(new Succ(new Succ(new Succ(x)))))
  y + z
  
  
}

abstract class Nat {
	def value : Int
	def isZero() : Boolean
	def predecessor : Nat
	def successor = new Succ(this)
	def + (that : Nat) : Nat
	def - (that : Nat) : Nat
}

class Zero extends Nat {
	def value = 0
	
	override def isZero() = true
	override def predecessor() = throw new Error(" No predecessor")
	override def + (that :Nat) = that
	override def - (that : Nat) = if (that isZero) new Zero else throw new Error("Negative")
}

class Succ(val n: Nat) extends Nat {
	def value = n.value + 1
	override def isZero() = false
	override def predecessor = n
	override def + (that : Nat) : Nat = new Succ(n + that)
	
	override def - (that : Nat) = {
		def subIter(currentValue: Nat, acc: Nat) : Nat =
			if (acc.isZero) currentValue
			else subIter(currentValue.predecessor, acc.predecessor)
		subIter(n, that)
	}
	
	override def toString() = value.toString()
}