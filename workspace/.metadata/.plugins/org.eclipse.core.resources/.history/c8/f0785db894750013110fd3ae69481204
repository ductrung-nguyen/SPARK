package test

object test2 {

	def abs(x: Double) = if (x < 0) - x else x//> abs: (x: Double)Double
	
	def sqrtIter(guess :Double, x:Double) : Double =
		if (isGoodEnough(guess, x)) guess
		else sqrtIter(improveGuess(guess, x), x)
                                                  //> sqrtIter: (guess: Double, x: Double)Double
		
	def isGoodEnough(guess: Double , x: Double) =
		if (abs(x/guess - guess)/x <= 0.00001) true else false
                                                  //> isGoodEnough: (guess: Double, x: Double)Boolean
		
	def improveGuess(guess: Double , x:Double) =
		(x/guess + guess)/2               //> improveGuess: (guess: Double, x: Double)Double
		
	def sqrt(x:Double) = sqrtIter(1.0, x)     //> sqrt: (x: Double)Double
	
	sqrt(1e4)                                 //> res0: Double = 0.010000000025490743
	
		
  
}